<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="8dip">


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/introTextView"
              android:text="@string/firstWelcomeMessage"
              android:layout_marginBottom="20dip" android:layout_gravity="center"/>
    <Button android:id="@+id/signInButton"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/signInToWindowsLive"/>

    <ImageView
            android:layout_width="169dp"
            android:layout_height="132dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/icon_without_bg"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/noAccountText"
              android:layout_height="wrap_content"
              android:text="@string/noAccountQuestion"
              android:layout_marginBottom="20dip" android:layout_gravity="center"/>
</LinearLayout>

